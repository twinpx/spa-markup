@import '../../styl/component-include.styl'

.b-projects-detail

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        opacity 0
        z-index -1

#advantages,
#location,
#filter,
#hypothec,
#progress,
#news,
#docs
  display block

.b-switch
  width 210px
  height 40px
  background-color #fafafa
  border-radius 3px
  position relative
  
  @media( min-width 576px )
    display inline-block
  
  span
    display inline-block
    line-height 40px
    font-size $12px
    width 105px
    height 40px
    text-align center
    cursor pointer
    position relative
    transition( color .3s ease )
    user-select none
    z-index 2
    
    &:first-child
      color #fff
      cursor default
    
  &:before
    content ''
    position absolute
    top 0
    left 0
    width 105px
    height 40px
    border-radius 3px
    background-color $brand-color
    transition( left .3s ease )
    z-index 1
    
  &.inverse
  
    &:before
      left 105px
    
    span
    
      &:first-child
        color #000
        cursor pointer
    
      &:last-child
        color #fff
        cursor default

.b-filter-chess__tabs
  position relative
  
  .b-filter-chess__tab
    transition( opacity .3s ease )
  
    &:first-child
      position static
      opacity 1
      
      @media( min-width 576px )
        transform( translateY(-73px))
  
    &:last-child
      position absolute
      top 0
      left 0
      width 100%
      opacity 0
      z-index -1
      
  &.inverse 
  
    .b-filter-chess__tab
    
      &:first-child
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        height 633px
        overflow hidden
        z-index -1
    
      &:last-child
        position static
        opacity 1
    
.b-projects-detail

  //Menu
  &__anchor-menu
    display block
    opacity 0
    transition( opacity .5s ease )

    &.show
      opacity 1

    a
      display inline-block
      font-size $14px
      line-height 16px
      margin-right 30px

      &,
      &:hover,
      &:active,
      &:focus
        color #707070

  //Progress
  &__progress

    p
      margin 0
      font-size $14px
      
    .swiper-container
      padding-top 47px
      margin-top -47px
      display none
      
      &.swiper-container-initialized
        display block
    
    .swiper-wrapper
      align-items stretch
    
    .swiper-slide
      height auto
      
    .swiper-arrow-left,
    .swiper-arrow-right
      position absolute
      top 0
      left auto
      cursor pointer
      margin-top 0
      width 25px
      height 25px
      background-repeat no-repeat
      background-position center
      background-size contain
      z-index 10
      
      &.swiper-button-disabled
        opacity .7
        cursor default
      
      &:after
        display none
        
      &:focus
        outline none
      
    .swiper-arrow-right
      right 10px
      
    .swiper-arrow-left
      right 45px
      
    .swiper-lazy-preloader
      border-color transparent
      border-radius 0
      background-repeat no-repeat
      background-position center
      background-size cover
      width 60px
      height 60px
      margin-top -30px
      margin-left -30px

  &__docs
    display block
    background-color $line-color
    border-radius 10px
    padding 50px 45px
    font-size $14px
    display flex
    justify-content space-between
    align-items center

    @media( max-width 767px )
      display block
  
.b-flat-card
  border 1px solid #e8e8e8
  padding 30px
  height 100%
  transition( border-color .3s ease )
  cursor pointer
  
  &:hover
    border-color #eabeb4

  &__img
    display block
    padding-top 100%
    background-repeat no-repeat
    background-position center
    background-size contain
    
  &__title
    margin-bottom 5px
    
  &__project
    font-size $14px
    margin-bottom 5px
    
    a
      color #610618
      
      &:hover,
      &:active,
      &:focus
        color #610618
    
  &__info
    font-size 11px
    margin-bottom 15px
    color #707070
    
    span
      display inline-block
      margin-right 20px
    
      span
        font-size $14px
      
      &:last-child
        margin-right 0
      
  &__price
    font-weight $bold
    white-space nowrap
    
    span
      display block
      color $brand-color
      white-space nowrap
      
    s
      display block
      font-size $12px
      font-weight $normal
      color #707070
      white-space nowrap

.b-advantages
  display block

  &__menu

    a
      font-size $14px
      display block
      margin-bottom 10px
      line-height 1.2

      &,
      &:hover,
      &:active,
      &:focus
        color #707070

      &.active
        pointer-events none
        cursor default

        &,
        &:hover,
        &:active,
        &:focus
          color #000
          opacity 1

      @media( max-width 767px )
        white-space nowrap
        width auto !important

    @media( min-width 768px )

      .swiper-wrapper
        display block

  &__tab
    display none

    &.active
      display block

.b-chess

  &-menu

    div
      display inline-block
      font-size $12px
      color #707070
      margin 0 20px 10px 0
      cursor pointer

      &.active
        color #000

      span
        font-size $10px
        display block

  &-block
    background-color $line-color
    border-radius 10px
    padding 30px

  &-wrap
    display flex
    justify-content center

  &-table
    display none

    &.active
      display flex

    &__floors
      width 46px
      font-size $11px
      display flex
      flex-wrap wrap

      div
        width 46px
        height 48px
        margin-bottom 10px
        line-height 48px

        @media( max-width 767px )
          height 30px
          line-height 30px
          margin-bottom 5px

    &__flats
      font-size $11px

      div
        display flex
        flex-wrap nowrap
        margin-bottom 10px

        @media( max-width 767px )
          margin-bottom 5px
          flex-wrap wrap

        span,
        a
          width 48px
          height 48px
          border-radius 10px
          border 1px solid $line-color
          text-align center
          line-height 48px
          margin-left 10px

          @media( max-width 767px )
            margin-left 5px
            width 30px
            height 30px
            line-height 30px
            border-radius 5px

        span
          background-color #fff
          color #707070

        a
          background-color $brand-color

          &,
          &:hover,
          &:active,
          &:focus
            color #fff