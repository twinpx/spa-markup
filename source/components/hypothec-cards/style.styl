@import '../../styl/component-include.styl'

.b-hypothec-cards

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        opacity 0
        width 100%
        pointer-events none
        z-index 1
    
.b-hypothec-cards

  &__wrapper
    display flex
    justify-content space-between
    align-items stretch

    @media( max-width 767px )
      display block
  
  &__item
    width calc( (100% - 60px) / 3 )
    min-height 250px
    border-radius 10px
    background-color $line-color
    background-repeat no-repeat
    background-position calc( 100% - 34px ) 35px
    background-size 64px
    color #333
    padding 30px 20px 25px
  
    &,
    &:hover,
    &:active,
    &:focus
      color #333

    @media( max-width 767px )
      display block
      width 100%
      margin-bottom 15px

  &__title
    font-weight $bold
    display block
    margin-bottom 50px

  &__info
    display block
    font-size $24px

    &:nth-of-type(2)
      margin-bottom 20px

    &:nth-of-type(3)
      float left
      margin-right 57px

    .text-muted
      display block
      color #9d9d9d !important

    .small
      font-size $12px

