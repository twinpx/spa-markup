@import '../../styl/component-include.styl'

.b-docs

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        opacity 0
        width 100%
        pointer-events none
        z-index 1
    
.b-docs

  &__wrapper
    display flex
    justify-content space-between
    align-items stretch
    flex-wrap wrap

    @media( min-width 1200px )

      &:after
        content ''
        width calc( (100% - 60px) / 3 )
  
  &__item
    width calc( (100% - 60px) / 3 )
    min-height 170px
    border-radius 10px
    display flex
    align-items center
    background-color $brand-color
    margin-bottom 30px

    @media( max-width 1199px )
      width calc( (100% - 30px) / 2 )

    @media( max-width 767px )
      width 100%
      margin-bottom 15px

    a&

      &,
      &:hover,
      &:active,
      &:focus
        color #fff

    b
      font-size $24px
      line-height 28px
      display block
      margin-bottom 14px

  &__icon
    width 35%
    background-repeat no-repeat
    background-position center
    background-size 57px
    height 76px

  &__text
    width 65%
    padding 20px 40px 20px 0

    span
      font-size $14px
      line-height 16px
      display inline-block