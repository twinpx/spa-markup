// start /components/filter/

//- push style and script file to the end of the page
if componentsArray
  - componentsArray[ componentsArray.length ] = 'filter'
else
  - var componentsArray = [ 'filter' ]

.container-lg

  .b-filter

    form( action="/components/projects.detail/ajax-response.html" method="GET" )

      .b-filter__wrapper

        input( type="hidden" name="limit" value="3" )
        input( type="hidden" name="page" value="1" )

        .b-filter__rooms
          label Кол-во комнат

          .b-checkbox
            label
              input( type="checkbox" name="ROOMS[]" value="studio" )
              span Студия
          .b-checkbox
            label
              input( type="checkbox" name="ROOMS[]" value="1" )
              span 1
          .b-checkbox
            label
              input( type="checkbox" name="ROOMS[]" value="2" )
              span 2
          .b-checkbox
            label
              input( type="checkbox" name="ROOMS[]" value="3" )
              span 3
          .b-checkbox
            label
              input( type="checkbox" name="ROOMS[]" value="4" )
              span 4

        .b-filter__square
          label Площадь, м2
          .b-filter__square-fields
            input.b-filter__square-min( type="text" value="20" name="square-min" )
            input.b-filter__square-max( type="text" value="150" name="square-max" )
          .b-filter__square-range( data-min="20" data-max="150")

        .b-filter__price
          label Цена
          .b-filter__price-fields
            input.b-filter__price-min( type="text" value="1800000" name="price-min" )
            input.b-filter__price-max( type="text" value="12000000" name="price-max" )
          .b-filter__price-range( data-min="1800000" data-max="12000000")

        .b-filter__price
          label Стадия строительства
          select.custom-select( name="status" )
            option( value="1" ) Строится
            option( value="2" ) Построен
            option( value="3" ) Сдан

        .b-filter__submit
          button.btn.btn-primary( type="submit" ) Подобрать

  hr.hr--lg

  .b-filter-result

  .b-filter-result__more.text-center
    
    hr
    
    button.btn.btn-light() Еще

  //- include ./table-highrise
              
// end /components/filter/