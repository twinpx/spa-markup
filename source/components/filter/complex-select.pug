// start /components/filter/

//- push style and script file to the end of the page
if componentsArray
  - componentsArray[ componentsArray.length ] = 'filter'
else
  - var componentsArray = [ 'filter' ]

.container-lg

  .b-filter.ph-block

    .ph

      .ph__item
      .ph__item
      .ph__item
      .ph__item
      .ph__item
      .ph__item

    .ph-content

      form( action="/components/filter/ajax-response.html" method="GET" data-ajax="true" )

        .b-filter__wrapper

          input( type="hidden" name="limit" value="3" )
          input( type="hidden" name="page" value="1" )

          .b-filter__complex
            label Жилой комплекс
            select( name="status" )
              option( value="0" ) Все
              option( value="1" ) Жилой комплекс
              option( value="2" ) Восточный
              option( value="3" ) Радужный
              option( value="4" ) Лермонтовский
              option( value="5" ) Малиновый ручей
              option( value="6" ) Ракитня

          hr.d-block.d-md-none

          .b-filter__type
            label Тип жилья
            select( name="type" )
              option( value="0" ) Все
              option( value="1" ) Квартира
              option( value="2" ) Апартаменты

          hr.d-block.d-md-none

          .b-filter__rooms
            label Кол-во комнат

            .b-checkbox
              label
                input( type="checkbox" name="ROOMS[]" value="studio" )
                span Студия
            .b-checkbox
              label
                input( type="checkbox" name="ROOMS[]" value="1" )
                span 1
            .b-checkbox
              label
                input( type="checkbox" name="ROOMS[]" value="2" )
                span 2
            .b-checkbox
              label
                input( type="checkbox" name="ROOMS[]" value="3" )
                span 3
            .b-checkbox
              label
                input( type="checkbox" name="ROOMS[]" value="4" disabled )
                span 4

          hr.d-block.d-xl-none

          .b-filter__square
            label Площадь, м2
            .b-filter__square-fields
              input.b-filter__square-min( type="text" value="20" name="square-min" )
              input.b-filter__square-max( type="text" value="150" name="square-max" )
            .b-filter__square-range( data-min="20" data-max="150")

          hr.d-block.d-sm-none

          .b-filter__price
            label Цена
            .b-filter__price-fields
              input.b-filter__price-min( type="text" value="1800000" name="price-min" )
              input.b-filter__price-max( type="text" value="12000000" name="price-max" )
            .b-filter__price-range( data-min="1800000" data-max="12000000")

          hr.d-block.d-md-none

          .b-filter__status
            label Стадия строительства
            select( name="status" )
              option( value="1" ) Строится
              option( value="2" ) Построен
              option( value="3" ) Сдан

          hr.d-block.d-xl-none

          .b-filter__submit
            button.btn.btn-primary( type="submit" ) Подобрать
            span( style="background-image: url( '/template/images/help.svg' );" )

      hr.hr--lg

#b-filter_res.container-lg

  .b-filter-result
    include ../../components/filter/ajax-response
                
// end /components/filter/