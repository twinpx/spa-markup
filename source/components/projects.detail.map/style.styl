@import '../../styl/component-include.styl'

.b-projects-detail-map

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        opacity 0
        width 100%
        pointer-events none
        z-index 1
        
#projectsDetailYmap
  height 633px
  
  @media( max-width 575px )
    height 500px
    
.b-projects-detail-map__signs
  font-size $14px

  div
    display flex
    align-items center

  img
    margin-right 15px
    width 38px
    height 38px

  @media( min-width 768px )
    display flex
    align-items center
    display-wrap wrap

    div
      margin-right 50px

  @media( max-width 767px )

    div
      margin-bottom 10px

      &:first-child
        display none
