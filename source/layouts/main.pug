block vars
  - var page = 'main'
  - var authorized = 'true'
      
doctype html
html
  head
    block title
      title spa
      
    include includes/meta

    link( href="/template/placeholders/" + page + ".css" rel="stylesheet" )
    
  body

    .b-page-content
  
      include ../components/bitrix-panel/template
      
      include includes/header
      
      block content
        .container-lgs
          h1 spa
    
    include includes/footer
    
    //- include page's styles and scripts
    include includes/fonts
    include includes/styles
    include includes/scripts

    //- deferred
    link( rel="stylesheet", href="/template/css/jquery-ui.css" )
    link( rel="stylesheet", href="/template/css/jquery-ui.theme.min.css" )
    script( src="/template/js/jquery-ui.js" )
    script( src="/template/js/jquery.ui.touch-punch.min.js" )
    
    //- include styles and scripts for all page's components
    if componentsArray
      each componentName in componentsArray
        link( rel="stylesheet", href="/components/" + componentName + "/style.css" )
        script( src="/components/" + componentName + "/script.js" )

