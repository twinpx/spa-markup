.b-header
  height 137px
  background-color #fff
  
  @media( max-width 576px )
    height 80px
    
  a
    color #707070
    
    &:hover,
    &:active,
    &:focus
      color #707070
  
  &-fixed-wrapper
    background-color #fff
    opacity 1
    
    @media( max-width 576px )
      position fixed
      top 0
      left 0
      width 100%
      z-index 1000
  
    .header-fixed &
      position fixed
      top -57px
      left 0
      width 100%
      z-index 1000
  
  &__top
    border-bottom 1px solid #f2f2f2
    height 57px
    font-size $12px
    padding 19px 0
    
  &__menu
    
    a,
    span
      display inline-block
      margin-right 26px

    span
      color #000
      cursor default

      a

        &,
        &:hover,
        &:active,
        &:focus
          color #000
          opacity 1
          margin-right 0
  
  &__bottom
    border-bottom 1px solid #f2f2f2
    
    .container-lg
      display flex
      justify-content space-between
      align-items center
      height 80px
      
      .header-fixed &
        height 70px
      
  &__logo
    width 160px
    margin-right 76px
    transition( width .5s ease )
    
    @media( max-width 576px )
      width calc( 100% - 246px - 76px )
      
    .header-fixed &
      width 47px
      
      img.d-sm-inline-block
        display none !important
      
      img.d-sm-none
        display inline-block !important
    
  &__submenu
    width calc( 100% - 200px - 76px - 160px )
    height 22px
    overflow hidden
    display flex
    flex-wrap wrap
    transition( width .5s ease )
    
    @media( max-width 991px )
      width calc( 100% - 200px - (76px + 160px) - (16px + 30px))
      
    .header-fixed &
      width calc( 100% - 200px - 76px - 47px )
    
    a,
    span
      display inline-block
      margin-left 44px
      font-size $14px
      
      &:first-child
        margin-left 0
        
      .header-fixed &
        font-size $12px
        
      &.fixed-visible
        display none
        
        .header-fixed &
          display inline-block

    span
      color #000
      cursor default

      a

        &,
        &:hover,
        &:active,
        &:focus
          color #000
          opacity 1
          margin-left 0
      
  &__tel
    width 200px
    color #000
    font-size 18px
    white-space nowrap
    
  &__menu-icon
    width 16px
    height 16px
    background-repeat no-repeat
    background-position center
    background-size cover
    margin-left 30px
    
  &__dropdown
    position relative
    
    &-wrapper
      display none
      position absolute
      top 0
      left 0
      width 100%
      font-size $14px
      padding-top 35px
      padding-bottom 35px
      background-color #fff
      border-bottom 1px solid #f2f2f2
      z-index 1000
      
    a,
    span
      margin-bottom 5px
    
    b
      margin-bottom 15px
      font-weight $medium
      
      a,
      span
        margin-bottom 0
    
    b,
    a,
    span
      display block

    span
      color #000

.b-footer
  display block
  flex 0 0 auto

  [class^=col]

    a
      display block
      font-size $14px
      line-height 24px

      &,
      &:hover,
      &:active,
      &:focus
        color #2b2b2b

    b
      display block
      font-weight $bold
      margin-bottom 5px

  .small
    font-size 9px
    
@media print
  
  .b-header
    height 81px
    
  .header-fixed .b-header-fixed-wrapper
    position static
    top 0
    
  .header-fixed .b-header__logo img.d-sm-inline-block
    display inline-block !important
    
  .header-fixed .b-header__logo img.d-sm-none
    display none !important

  .b-header__top,
  .b-header__submenu,
  .b-footer
    display none !important