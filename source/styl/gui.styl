body
  background #fff
  font-family 'Roboto', sans-serif
  font-size 16px
  font-weight normal
  color #333

@media (min-width: 1400px)
  .container,
  .container-lg,
  .container-md,
  .container-sm,
  .container-xl
    max-width 1370px
  
a
  color #707070
  transition( opacity .3s ease )
  
  &:hover,
  &:active,
  &:focus
    color #707070
    text-decoration none
    opacity .7
  
h1,
p,
blockquote
  max-width 770px
  
h1
  font-weight $bold
  font-size $32px
  margin 1.3rem 0
  
.b-lead
  font-weight $light
  font-size $24px
  margin 1.3rem 0
  
blockquote
  border-left 5px solid $brand-color
  padding-left 33px
  margin-left 40px
  
hr
  margin-top 1rem
  margin-bottom 1rem
  border-top 1px solid transparent
  
  &.hr--xs
    margin-top .25rem
    margin-bottom .25rem
  
  &.hr--sm
    margin-top .5rem
    margin-bottom .5rem
  
  &.hr--md
    margin-top 1rem
    margin-bottom 1rem
  
  &.hr--lg
    margin-top 1.5rem
    margin-bottom 1.5rem
  
  &.hr--xl
    margin-top 2rem
    margin-bottom 2rem
    
  &.hr--line
    border-top 1px solid #eee
    