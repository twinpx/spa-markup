.b-hypothec-cards    

  &.ph-block
    position relative
  
  .ph
    display flex
    justify-content space-between
    align-items stretch
    flex-wrap wrap

    @media( max-width 767px )
      display block

    &__item
      width calc( (100% - 60px) / 3 )
      height 250px
      border-radius 10px
      background-color $placeholder-color
    
      @media( max-width 767px )
        display block
        width 100%
        margin-bottom 15px
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 0