.b-contacts    

  &.ph-block
    position relative
  
  .ph
    display flex
    justify-content space-between
    align-items stretch
    flex-wrap wrap

    &__item
      background-color $line-color
      border-radius 10px
      height 300px
      width calc( 50% - 15px )

      @media( max-width 575px )
        width 100%
        margin-bottom 33px

      &:first-child
        width 100%
        margin-bottom 33px
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      pointer-events none
      z-index 1