.b-docs-detail 

  &.ph-block
    position relative
  
  .ph
    display flex
    justify-content space-between
    align-items stretch
    flex-wrap wrap

    &__item
      width calc( (100% - 30px) / 2 )
      height 112px
      border-radius 10px
      margin-bottom 40px
      background-color $placeholder-color

      @media( max-width 767px )
        width 100%
        margin-bottom 15px
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 0