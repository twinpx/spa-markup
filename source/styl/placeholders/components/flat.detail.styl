.b-flat-detail    

  &.ph-block
    position relative
  
  .ph
  
    &__h1
      background-color $placeholder-color
      width 70%
      height 38px
      margin-bottom 49px
  
    &__wrapper
      border 1px solid $placeholder-color
      padding 50px 30px 30px
      
      @media( min-width 768px )
        display flex
        justify-content space-between
        
    &__img
      padding-top 100%
      background-color $placeholder-color
      
      @media( min-width 768px )
        width calc( 50% - 15px )
      
    &__text
      
      @media( min-width 768px )
        width calc( 50% - 50px )
      
      div
        height 7px
        margin-bottom 10px
        background-color $placeholder-color
        
        &:last-child
          width 70%
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 0