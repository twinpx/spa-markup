.b-filter    

  &.ph-block
    position relative
  
  .ph
    display flex
    align-items stretch
    flex-wrap wrap

    &__item
      width calc( 15% - 30px )
      min-width 160px
      height 48px
      background-color $placeholder-color
      margin 26px 30px 0 0

      @media( max-width 575px )
        width 100%
        margin-right 0
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 0