body
  margin 0
  overflow-y scroll
  background #fff

.container-lg
  width 100%
  padding-right 15px
  padding-left 15px
  margin-right auto
  margin-left auto

  @media (min-width 992px)
    max-width 960px

  @media (min-width 1200px)
    max-width 1140px

  @media (min-width 1400px)
    max-width 1370px

hr
  margin-top 1rem
  margin-bottom 1rem
  border-top 1px solid transparent !important
  
  &.hr--xs
    margin-top .25rem
    margin-bottom .25rem
  
  &.hr--sm
    margin-top .5rem
    margin-bottom .5rem
  
  &.hr--md
    margin-top .75rem
    margin-bottom .75rem
  
  &.hr--lg
    margin-top 1.5rem
    margin-bottom 1.5rem
  
  &.hr--xl
    margin-top 3rem //2rem
    margin-bottom 3rem //2rem
  
  &.hr--xxl
    margin-top 3rem
    margin-bottom 3rem